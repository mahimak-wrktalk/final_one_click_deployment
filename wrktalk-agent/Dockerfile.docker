FROM python:3.11-slim

# Install system dependencies including Docker CLI and docker-compose
RUN apt-get update && apt-get install -y \
    curl \
    docker.io \
    docker-compose \
    && rm -rf /var/lib/apt/lists/*

# Verify Docker and docker-compose installation
RUN docker --version && docker-compose --version

WORKDIR /app

# Copy requirements and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY src/ ./src/

# Create directories with appropriate permissions
RUN mkdir -p /tmp/wrktalk && \
    chmod 777 /tmp/wrktalk

# Set deployment type
ENV WRKTALK_AGENT_DEPLOYMENT_TYPE=docker

# Note: This container needs to run as root to access Docker socket
# In production, consider using Docker socket proxy for better security

# Run agent
CMD ["python", "-m", "wrktalk_agent"]
